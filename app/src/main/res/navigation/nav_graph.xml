<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <!-- gere o fluxo da navegação -->

    <!--app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"
    estas linhas limpam o histórico de navegação -->

    <!-- ecrã principal -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.MainFragment"
        android:label="Principal"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_mainFragment_to_escolhaFragment"
            app:destination="@id/escolhaFragment" />
    </fragment>

    <!-- ecrã sobre -->
    <fragment
        android:id="@+id/aboutFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.AboutFragment"
        android:label="Sobre"
        tools:layout="@layout/fragment_about" />

    <!-- ecrã de login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_escolhaFragment"
            app:destination="@id/escolhaFragment" />
    </fragment>

    <!-- ecrã de escolha -->
    <fragment
        android:id="@+id/escolhaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.EscolhaFragment"
        android:label="Escolha"
        tools:layout="@layout/fragment_escolha">
        <action
            android:id="@+id/action_escolhaFragment_to_registarFragment"
            app:destination="@id/registarFragment"/>
        <action
            android:id="@+id/action_escolhaFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- ecrã de registo -->
    <fragment
        android:id="@+id/registarFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.RegistarFragment"
        android:label="Registo"
        tools:layout="@layout/fragment_registar">
        <action
            android:id="@+id/action_registarFragment_to_verificacaoFragment"
            app:destination="@id/verificacaoFragment" />
    </fragment>

    <!-- ecrã de verificação de código -->
    <fragment
        android:id="@+id/verificacaoFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.VerificacaoFragment"
        android:label="Verificação"
        tools:layout="@layout/fragment_verificacao">
        <action
            android:id="@+id/action_verificacaoFragment_to_criarPinFragment"
            app:destination="@id/criarPinFragment" />
    </fragment>

    <!-- ecrã de criação de PIN -->
    <fragment
        android:id="@+id/criarPinFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.CriarPinFragment"
        android:label="Criar PIN"
        tools:layout="@layout/fragment_criar_pin">
        <action
            android:id="@+id/action_criarPinFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ecrã home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_marcarConsultaFragment"
            app:destination="@id/marcarConsultaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_agendarVacinaFragment"
            app:destination="@id/agendarVacinaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_consultasFragment"
            app:destination="@id/consultasFragment" />
        <action
            android:id="@+id/action_homeFragment_to_definicoesFragment"
            app:destination="@id/definicoesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
        <action
            android:id="@+id/action_homeFragment_to_animalFragment"
            app:destination="@id/animalFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historicoFragment"
            app:destination="@id/historicoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_vacinasFragment"
            app:destination="@id/vacinasFragment" />
    </fragment>

    <!-- ecrã definições -->
    <fragment
        android:id="@+id/definicoesFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.DefinicoesFragment"
        android:label="Definições"
        tools:layout="@layout/fragment_definicoes">
        <action
            android:id="@+id/action_definicoesFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ecrã perfil -->
    <fragment
        android:id="@+id/perfilFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

    <!-- ecrã animal -->
    <fragment
        android:id="@+id/animalFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.AnimalFragment"
        android:label="Animal"
        tools:layout="@layout/fragment_animal">
        <action
            android:id="@+id/action_animalFragment_to_camaraFragment"
            app:destination="@id/camaraFragment" />
    </fragment>

    <!-- ecrã marcar consulta -->
    <fragment
        android:id="@+id/marcarConsultaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.MarcarConsultaFragment"
        android:label="Marcar Consulta"
        tools:layout="@layout/fragment_marcar_consulta" />

    <!-- ecrã agendar vacina -->
    <fragment
        android:id="@+id/agendarVacinaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.AgendarVacinaFragment"
        android:label="Agendar Vacina"
        tools:layout="@layout/fragment_agendar_vacina" >
    </fragment>

    <!-- ecrã histórico -->
    <fragment
        android:id="@+id/historicoFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.HistoricoFragment"
        android:label="Histórico"
        tools:layout="@layout/fragment_historico" >
        <action
            android:id="@+id/action_historicoFragment_to_adicionarExameFragment"
            app:destination="@id/adicionarExameFragment" />
        <action
            android:id="@+id/action_historicoFragment_to_detalhesExameFragment"
            app:destination="@id/detalhesExameFragment" />
    </fragment>

    <!-- ecrã adicionar exame -->
    <fragment
        android:id="@+id/adicionarExameFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.AdicionarExameFragment"
        android:label="Adicionar Exame"
        tools:layout="@layout/fragment_adicionar_exame" >
        <action
            android:id="@+id/action_adicionarExameFragment_to_camaraFragment"
            app:destination="@id/camaraFragment" />
    </fragment>

    <!-- ecrã detalhes exame -->
    <fragment
        android:id="@+id/detalhesExameFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.DetalhesExameFragment"
        android:label="Detalhes do Exame"
        tools:layout="@layout/fragment_detalhes_exame" >
        <argument
            android:name="exame"
            app:argType="pt.ipt.dam2025.vetconnect.model.Exame" />
        <action
            android:id="@+id/action_detalhesExameFragment_to_editarExameFragment"
            app:destination="@id/editarExameFragment" />
    </fragment>

    <!-- ecrã editar exame -->
    <fragment
        android:id="@+id/editarExameFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.EditarExameFragment"
        android:label="Editar Exame"
        tools:layout="@layout/fragment_editar_exame" >
        <action
            android:id="@+id/action_editarExameFragment_to_camaraFragment"
            app:destination="@id/camaraFragment" />
        <argument
            android:name="exame"
            app:argType="pt.ipt.dam2025.vetconnect.model.Exame" />
    </fragment>

    <!-- ecrã consultas -->
    <fragment
        android:id="@+id/consultasFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.ConsultasFragment"
        android:label="Consultas"
        tools:layout="@layout/fragment_consultas">
        <action
            android:id="@+id/action_consultasFragment_to_detalhesConsultaFragment"
            app:destination="@id/detalhesConsultaFragment" />
    </fragment>

    <!-- ecrã detalhe consulta -->
    <fragment
        android:id="@+id/detalhesConsultaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.DetalhesConsultaFragment"
        android:label="Consulta"
        tools:layout="@layout/fragment_detalhes_consulta" >
        <action
            android:id="@+id/action_detalhesConsultaFragment_to_editarConsultaFragment"
            app:destination="@id/editarConsultaFragment" />
        <argument
            android:name="consulta"
            app:argType="pt.ipt.dam2025.vetconnect.model.Consulta" />
    </fragment>

    <!-- ecrã editar consulta -->
    <fragment
        android:id="@+id/editarConsultaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.EditarConsultaFragment"
        android:label="Editar Consulta"
        tools:layout="@layout/fragment_editar_consulta">
        <argument
            android:name="consulta"
            app:argType="pt.ipt.dam2025.vetconnect.model.Consulta" />
    </fragment>


    <!-- ecrã vacinas -->
    <fragment
        android:id="@+id/vacinasFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.VacinasFragment"
        android:label="Vacinas"
        tools:layout="@layout/fragment_vacinas">
        <action
            android:id="@+id/action_vacinasFragment_to_detalhesVacinaFragment"
            app:destination="@id/detalhesVacinaFragment" />
    </fragment>

    <!-- ecrã detalhe vacina -->
    <fragment
        android:id="@+id/detalhesVacinaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.DetalhesVacinaFragment"
        android:label="Vacinas"
        tools:layout="@layout/fragment_detalhes_vacina" >
        <action
            android:id="@+id/action_detalhesVacinaFragment_to_editarVacinaFragment"
            app:destination="@id/editarVacinaFragment" />
        <argument
            android:name="vacina"
            app:argType="pt.ipt.dam2025.vetconnect.model.Vacina" />
    </fragment>

    <!-- ecrã editar vacina -->
    <fragment
        android:id="@+id/editarVacinaFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.EditarVacinaFragment"
        android:label="Editar Vacina"
        tools:layout="@layout/fragment_editar_vacina" >
        <argument
            android:name="vacina"
            app:argType="pt.ipt.dam2025.vetconnect.model.Vacina" />
    </fragment>

    <!-- ecrã camara -->
    <fragment
        android:id="@+id/camaraFragment"
        android:name="pt.ipt.dam2025.vetconnect.ui.fragment.CamaraFragment"
        android:label="Câmara"
        tools:layout="@layout/fragment_camara" />

</navigation>