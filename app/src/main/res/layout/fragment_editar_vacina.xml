<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="16dp"
        tools:context=".ui.fragment.EditarVacinaFragment">

        <TextView
            android:id="@+id/tituloEditarVacina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/editar_vacina"
            android:textColor="@color/branco"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tituloEditarVacina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- nome da vacina (Spinner) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nome_da_vacina"
                    android:textColorHint="@color/cinzento_claro">
                    <AutoCompleteTextView
                        android:id="@+id/spinner_nome_vacina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda_branca"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        android:textColor="@color/branco"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- clínica (Spinner) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/clinica"
                    android:textColorHint="@color/cinzento_claro">
                    <AutoCompleteTextView
                        android:id="@+id/spinner_clinica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda_branca"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        android:textColor="@color/branco"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- veterinário (Spinner) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/veterinario"
                    android:textColorHint="@color/cinzento_claro">
                    <AutoCompleteTextView
                        android:id="@+id/spinner_veterinario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda_branca"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        android:textColor="@color/branco"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- data de aplicação -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/data_dd_mm_aaaa"
                    android:textColorHint="@color/cinzento_claro">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dataAplicacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda_branca"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/branco"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- observações -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="@string/observacoes"
                    android:textColorHint="@color/cinzento_claro">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editObservacoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda_branca"
                        android:inputType="textMultiLine"
                        android:textColor="@color/branco"
                        android:padding="12dp"
                        android:gravity="top"
                        android:minLines="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- botão guardar -->
                <Button
                    android:id="@+id/button_guardar_alteracoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ButtonStyle"
                    android:text="@string/guardar"
                    android:layout_marginTop="32dp"/>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>