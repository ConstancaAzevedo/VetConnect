<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="16dp"
        tools:context=".ui.fragment.EditarVacinaFragment">

        <TextView
            android:id="@+id/tituloEditarVacina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Editar Vacina"
            android:textColor="@color/branco"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tituloEditarVacina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome da Vacina"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/branco" />

                <EditText
                    android:id="@+id/nomeVacina"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borda_branca"
                    android:padding="12dp"
                    android:textColor="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data de Aplicação"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/branco" />

                <EditText
                    android:id="@+id/dataAplicacao"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borda_branca"
                    android:padding="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Próxima Dose"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/branco" />

                <EditText
                    android:id="@+id/proximaDose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borda_branca"
                    android:padding="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veterinário"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/branco" />

                <EditText
                    android:id="@+id/veterinario"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borda_branca"
                    android:padding="12dp"
                    android:textColor="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lote"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/branco" />

                <EditText
                    android:id="@+id/lote"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borda_branca"
                    android:padding="12dp"
                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnGuardar"
                    style="@style/ButtonStyle"
                    android:text="Guardar Alterações"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btnApagar"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Apagar Vacina"
                    android:textColor="@color/vermelho" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>