<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.fragment.CriarPinFragment">

    <!-- página de criação de PIN -->

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/defina_o_seu_pin_de_acesso"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pin_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/crie_pin"
        android:textColor="@color/branco"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <LinearLayout
        android:id="@+id/pin_dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_instruction_text">

        <ImageView
            android:id="@+id/pin1"
            style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView
            android:id="@+id/pin2"
            style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView
            android:id="@+id/pin3"
            style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView
            android:id="@+id/pin4"
            style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView
            android:id="@+id/pin5"
            style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView
            android:id="@+id/pin6"
            style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/pin_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:columnCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_dots_layout">

        <Button
            android:id="@+id/btn1"
            style="@style/PinButtonStyle" android:text="1" />
        <Button
            android:id="@+id/btn2"
            style="@style/PinButtonStyle" android:text="2" />
        <Button
            android:id="@+id/btn3"
            style="@style/PinButtonStyle" android:text="3" />
        <Button
            android:id="@+id/btn4"
            style="@style/PinButtonStyle" android:text="4" />
        <Button
            android:id="@+id/btn5"
            style="@style/PinButtonStyle" android:text="5" />
        <Button
            android:id="@+id/btn6"
            style="@style/PinButtonStyle" android:text="6" />
        <Button
            android:id="@+id/btn7"
            style="@style/PinButtonStyle" android:text="7" />
        <Button
            android:id="@+id/btn8"
            style="@style/PinButtonStyle" android:text="8" />
        <Button
            android:id="@+id/btn9"
            style="@style/PinButtonStyle" android:text="9" />

        <Space style="@style/PinButtonStyle" />
        <Button
            android:id="@+id/btn0"
            style="@style/PinButtonStyle" android:text="0" />
        <ImageButton
            android:id="@+id/btnDelete"
            style="@style/PinButtonStyle"
            android:contentDescription="Apagar"
            android:src="@drawable/backspace_icon" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>