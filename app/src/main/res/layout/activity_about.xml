<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/course_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Licenciatura em Engenharia Informática"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/course_name_label"
            app:layout_constraintTop_toTopOf="@+id/course_name_label" />

        <TextView
            android:id="@+id/discipline_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Disciplina:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_name" />

        <TextView
            android:id="@+id/discipline_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Desenvolvimento de Aplicações Móveis"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/course_name"
            app:layout_constraintTop_toTopOf="@+id/discipline_label" />

        <TextView
            android:id="@+id/academic_year_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ano Letivo:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discipline_name" />

        <TextView
            android:id="@+id/academic_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025/2026"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/discipline_name"
            app:layout_constraintTop_toTopOf="@+id/academic_year_label" />

        <TextView
            android:id="@+id/authors_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Autores:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/academic_year_label" />

        <!-- Author 1 -->
        <ImageView
            android:id="@+id/author1_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authors_label"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/author1_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nº Aluno, Nome do Aluno"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/author1_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/author1_photo"
            app:layout_constraintTop_toTopOf="@+id/author1_photo" />

        <!-- Author 2 -->
        <ImageView
            android:id="@+id/author2_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author1_photo"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/author2_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nº Aluno, Nome do Aluno"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/author2_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/author2_photo"
            app:layout_constraintTop_toTopOf="@+id/author2_photo" />

        <TextView
            android:id="@+id/libraries_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Bibliotecas e Código de Terceiros:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author2_photo" />

        <TextView
            android:id="@+id/libraries_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="- Material Components for Android\n- AndroidX Libraries (AppCompat, ConstraintLayout, etc.)\n- Room Persistence Library"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/libraries_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>