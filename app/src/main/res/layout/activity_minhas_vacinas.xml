<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.activities.MinhasVacinasActivity">

    <!-- pÃ¡gina de vacinas -->

    <TextView
        android:id="@+id/title_minhas_vacinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minhas Vacinas Agendadas"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_margin="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVacinas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_minhas_vacinas"
        android:padding="8dp"
        tools:listitem="@layout/item_minha_vacina" />

</RelativeLayout>