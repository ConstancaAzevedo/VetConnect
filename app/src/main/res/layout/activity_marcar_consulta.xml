<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Marcar Consulta"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <!--  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_marcar_consulta"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="" />

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="____" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_animal"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="" />

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="___" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--  -->
        <androidx.cardview.widget.CardView
            style="@style/HomeCardStyle"
            android:id="@+id/card_historico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="" />

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="___" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_perfil"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="" />

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="___" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>