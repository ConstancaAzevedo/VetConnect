<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".ui.fragment.MarcarConsultaFragment">

    <!-- página de marcar consulta -->

    <!-- título -->
    <TextView
        android:id="@+id/tituloMarcarConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/marcar_consulta"
        android:textColor="@color/branco"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tituloMarcarConsulta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- motivo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/motivo"
                android:textColorHint="@color/branco">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/motivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda_branca"
                    android:gravity="top"
                    android:minLines="2"
                    android:padding="12dp"
                    android:textColor="@color/branco"
                    android:textSize="18sp"
                    tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- clínica (Spinner) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/clinica"
                android:textColorHint="@color/branco">

                <AutoCompleteTextView
                    android:id="@+id/clinicaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda_branca"
                    android:inputType="none"
                    android:textColor="@color/branco"
                    android:hint="@string/clinica"
                    tools:ignore="VisualLintTextFieldSize, SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- veterinário (Spinner) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/veterinario"
                android:textColorHint="@color/branco">

                <AutoCompleteTextView
                    android:id="@+id/veterinarioSpinner"
                    android:layout_width="match_parent"                    android:layout_height="wrap_content"
                    android:background="@drawable/borda_branca"
                    android:inputType="none"
                    android:hint="@string/veterinario"
                    android:textColor="@color/branco"
                    tools:ignore="VisualLintTextFieldSize, SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- data de consulta -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/data_dd_mm_aaaa"
                android:textColorHint="@color/cinzento_claro">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dataConsulta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda_branca"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="date"
                    android:textColor="@color/branco"
                    tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- observações -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="@string/observacoes"
                android:textColorHint="@color/cinzento_claro">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/observacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda_branca"
                    android:textColor="@color/branco"
                    android:padding="12dp"
                    android:gravity="top"
                    android:minLines="3"
                    tools:ignore="VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- botão de confirmação -->
            <Button
                android:id="@+id/btnConfirmar"
                style="@style/ButtonStyle"
                android:layout_gravity="center"
                android:text="@string/confirmar_marcao" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>