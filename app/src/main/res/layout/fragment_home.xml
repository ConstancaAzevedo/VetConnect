<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".ui.fragment.HomeFragment">

    <!-- página home -->

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/bem_vindo"
        android:textColor="@color/branco"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="4"
        app:layout_constraintBottom_toTopOf="@+id/btnDefinicoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome">

        <!-- marcar consulta -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMarcarConsulta"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/marcar_consulta_icon"
                    android:contentDescription="@string/marcar_consulta"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/marcar_consulta"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- agendar vacina -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAgendarVacina"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/marcar_vacina_icon"
                    android:contentDescription="@string/agendar_vacina"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/agendar_vacina"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- minhas consultas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardConsultas"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/consultas_icon"
                    android:contentDescription="@string/minhas_consultas"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/minhas_consultas" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- minhas vacinas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMinhasVacinas"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/vacinas_icon"
                    android:contentDescription="@string/minhas_vacinas"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/minhas_vacinas" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- animais -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAnimal"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/animal_icon"
                    android:contentDescription="@string/meu_animal"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/meu_animal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- histórico -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHistorico"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/historico_icon"
                    android:contentDescription="@string/historico"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/historico" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- perfil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil"
            style="@style/HomeCardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal">

            <LinearLayout
                style="@style/HomeCardLayoutStyle"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/HomeCardIconStyle"
                    android:src="@drawable/perfil_icon"
                    android:contentDescription="@string/perfil"/>

                <TextView
                    style="@style/HomeCardTextStyle"
                    android:text="@string/perfil" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

        <!-- botao de definições -->
        <Button
            android:id="@+id/btnDefinicoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:text="@string/definicoes"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VisualLintButtonSize" />


</androidx.constraintlayout.widget.ConstraintLayout>