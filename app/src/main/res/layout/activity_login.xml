<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.activities.LoginActivity">


    <!-- Mensagem de boas-vindas -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Spinner para seleção de conta -->
    <Spinner
        android:id="@+id/account_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/edit_text"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text" />

    <!-- Instrução para inserir o PIN -->
    <TextView
        android:id="@+id/pin_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Insira o seu PIN de acesso para\ndesbloquear a aplicação"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_spinner" />

    <!-- Layout para os indicadores do PIN (pontos cinzentos) -->
    <LinearLayout
        android:id="@+id/pin_dots_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_instruction_text">


        <!-- Adicione 6 ImageViews para representar os pontos do PIN -->
        <ImageView android:id="@+id/pin_dot_1" style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView android:id="@+id/pin_dot_2" style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView android:id="@+id/pin_dot_3" style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView android:id="@+id/pin_dot_4" style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView android:id="@+id/pin_dot_5" style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />
        <ImageView android:id="@+id/pin_dot_6" style="@style/PinDotStyle" android:src="@drawable/ic_pin_dot_antes" />

    </LinearLayout>

    <!-- Grelha para o teclado numérico -->
    <GridLayout
        android:id="@+id/pin_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:columnCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_dots_layout">

        <!-- Botões do teclado numérico -->
        <Button android:id="@+id/button_1" style="@style/PinButtonStyle" android:text="1" />
        <Button android:id="@+id/button_2" style="@style/PinButtonStyle" android:text="2" />
        <Button android:id="@+id/button_3" style="@style/PinButtonStyle" android:text="3" />
        <Button android:id="@+id/button_4" style="@style/PinButtonStyle" android:text="4" />
        <Button android:id="@+id/button_5" style="@style/PinButtonStyle" android:text="5" />
        <Button android:id="@+id/button_6" style="@style/PinButtonStyle" android:text="6" />
        <Button android:id="@+id/button_7" style="@style/PinButtonStyle" android:text="7" />
        <Button android:id="@+id/button_8" style="@style/PinButtonStyle" android:text="8" />
        <Button android:id="@+id/button_9" style="@style/PinButtonStyle" android:text="9" />

        <!-- linha inferior com o "0" e "Apagar" -->
        <Space style="@style/PinButtonStyle" />
        <Button android:id="@+id/button_0" style="@style/PinButtonStyle" android:text="0" />
        <ImageButton
            android:id="@+id/button_delete"
            style="@style/PinButtonStyle"
            android:contentDescription="Apagar"
            android:src="@drawable/backspace_icon" />
    </GridLayout>

    <!-- Botão "Esqueci o PIN" -->
    <TextView
        android:id="@+id/text_forgot_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Esqueci-me do PIN"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>