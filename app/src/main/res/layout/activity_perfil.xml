<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- página de perfil do tutor -->

    <TextView
        android:id="@+id/tituloPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Perfil do Utilizador"
        android:textColor="@color/branco"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Labels -->
    <TextView
        android:id="@+id/utiliNome"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nome:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloPerfil" />

    <TextView
        android:id="@+id/utiliEmail"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeDado" />

    <TextView
        android:id="@+id/utiliTelemovel"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nº de Telemóvel:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailDado" />

    <TextView
        android:id="@+id/utiliNacionalidade"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nacionalidade:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telemovelDado" />

    <TextView
        android:id="@+id/utiliSexo"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sexo:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nacionalidadeDado" />

    <TextView
        android:id="@+id/utiliCC"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cartão de Cidadão:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexoDado" />

    <TextView
        android:id="@+id/utiliData"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Data de Nascimento:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccDado" />

    <TextView
        android:id="@+id/utiliMorada"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Morada:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataDado" />

    <!-- barrier para alinhar -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="utiliNome, utiliEmail,utiliTelemovel, utiliSexo, utiliCC, utiliNacionalidade, utiliMorada, utiliData" />

    <!-- informações do tutor -->
    <EditText
        android:id="@+id/nomeDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="textCapWords"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="Nome do Tutor"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/emailDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="textEmailAddress"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="email@tutor.com"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/telemovelDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliTelemovel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="960249058"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/nacionalidadeDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="textCapWords"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliNacionalidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="Portugal"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/sexoDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="textCapWords"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliSexo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="Feminino"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/ccDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="123456789"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/dataDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="date"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="12/12/2005"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/moradaDado"
        style="@style/ValueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:inputType="textPostalAddress"
        app:layout_constraintBaseline_toBaselineOf="@id/utiliMorada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        tools:text="Rua da Exemplo, 123"
        android:textSize="18sp"/>


    <!-- botão para editar/guardar as informações do utilizador -->
    <Button
        android:id="@+id/btnEditarGuardar"
        style="@style/ButtonStyle"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moradaDado" />

</androidx.constraintlayout.widget.ConstraintLayout>