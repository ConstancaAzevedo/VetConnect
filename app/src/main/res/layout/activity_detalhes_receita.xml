<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- pÃ¡gina de detalhes da receita -->

    <TextView
        android:id="@+id/detalhes_receita_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes da Receita"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/detalhes_receita_medicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/detalhes_receita_posologia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/detalhes_receita_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/detalhes_receita_medico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_apagar_receita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Apagar" />

</LinearLayout>