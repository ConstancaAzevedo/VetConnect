<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Backup" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Backup" parent="Base.Theme.Backup" />

    <!-- estilos dos cards do menu principal -->
    <style name="HomeCardStyle" parent="CardView.Light">
        <item name="android:layout_margin">12dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/transparente</item>
    </style>
    <style name="HomeCardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HomeCardIconStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="tint">@color/branco</item>
    </style>
    <style name="HomeCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>



</resources>