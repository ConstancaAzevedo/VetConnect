<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- PermissÃµes da camara -->
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".VetConnectApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trabalho">

        <!-- tela principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AboutActivity" />
        <activity android:name=".EscolhaActivity" />
        <activity android:name=".TutorActivity" />
        <activity android:name=".VeterinarioActivity" />
        <activity android:name=".VerificTutorActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".PerfilTutorActivity" />
        <activity android:name=".AnimalActivity" />
        <activity android:name=".MarcarConsultaActivity" />
        <activity android:name=".HistoricoActivity" />

        <!-- Novas Activities -->
        <activity android:name=".RegisterTutorActivity" />
        <activity android:name=".CreatePinActivity" />
        <activity android:name=".CameraActivity" />

    </application>

</manifest>